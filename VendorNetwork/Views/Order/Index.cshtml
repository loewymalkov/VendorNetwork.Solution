@using VendorNetwork.Models;

<h1>Orders</h1>

<p>This is the orders page for this vendor</p>

@if (@Model.Count == 0)
{
  <h3>No orders have been added for this vendor!</h3>
} 

<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/orders/@order.Id'>@order.Title</a></li>
  }
</ul>

<a href="/orders/new">Add a new order.</a>


<p><a href='/'>Back home</a></p>