@using VendorNetwork.Models;

<h1>Orders</h1>

<p>This is the orders page for this vendor</p>

@if (@Model.Count == 0)
{
  <h3>No orders have been added for this vendor!</h3>
} 
<ul>
  @foreach (Order order in Model)
  {
    <h3><a href='/orders/@orders.Id'>@order.Title</a></h3>
  }
</ul>
<p><a href='/'>Back home</a></p>